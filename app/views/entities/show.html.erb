<p style="color: green"><%= notice %></p>

<h1>Entity</h1>

<div class="card card-default">
  <div class="card-header">
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Responsible</th>
          <th>Address</th>
          <th>Phone</th>
          <th>Email</th>
        </tr>
      </thead>

      <tbody>
        <tr>
          <td><%= @entity.name%></td>
          <td><%= @entity.responsible%></td>
          <td><%= @entity.address%></td>
          <td><%= @entity.phone%></td>
          <td><%= @entity.email%></td>
        </tr>
      </tbody>
    </table>
  </div>

  <div class="card-footer">
    <%= link_to 'Edit', edit_entity_path(@entity), class: 'btn btn-success' %>
    <%= link_to 'Back', entities_path, class: 'btn btn-primary' %>
  </div>
</div>
