<p style="color: green"><%= notice %></p>

<div class="header">
  <h1>Courses</h1>
  <%= link_to "New Course", new_course_path, class: 'btn btn-success' %>
</div>

<table class="table table-hover box-shadow" >
  <thead>
    <tr>      
      <th><strong>Course Name</strong></th>
      <th><strong>Course Code</strong></th>
      <th colspan="3" ><strong>Actions</strong></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <%= render course %>
    <% end %>
  </tbody>
</table>

<div class="pagination-container">
  <%= paginate @courses %>
</div>



